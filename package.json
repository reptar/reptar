{
  "name": "reptar",
  "version": "2.3.1",
  "description": "a static site generator that roars",
  "main": "./dist/lib/index.js",
  "bin": {
    "reptar": "./dist/bin/reptar.js",
    "reptar-debug": "./bin/reptar-debug.js"
  },
  "scripts": {
    "docs": "./node_modules/.bin/esdoc -c esdoc.json",
    "gh-pages": "npm run docs && gdd --branch gh-pages --src esdocs --remote origin",
    "compile": "babel lib --out-dir dist/lib && babel bin --out-dir dist/bin && shx cp lib/config/config_example.yml dist/lib/config/config_example.yml",
    "prepublish": "cross-env NODE_ENV=production npm run compile",
    "postpublish": "npm run gh-pages",
    "pretest": "npm run lint",
    "test": "mocha --recursive --require ./test/setup.js --reporter spec",
    "test:unit": "npm test -- test/unit",
    "test:e2e": "npm test -- test/e2e",
    "lint": "eslint .",
    "coverage": "./node_modules/.bin/nyc npm run test",
    "coveralls": "./node_modules/.bin/nyc report --reporter=text-lcov | coveralls",
    "release": "standard-version"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "helpMessage": "\nReptar is using standard-version as its commit message convention.\nPlease consult https://github.com/conventional-changelog/standard-version#commit-message-convention-at-a-glance \nfor documentation on how to format your commit message."
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": "reptar/reptar",
  "keywords": [
    "reptar",
    "blog",
    "blogging",
    "static",
    "static site",
    "static site generator"
  ],
  "author": "Harry Wolff <hello@hswolff.com> (http://hswolff.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "preferGlobal": false,
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "activity-logger": "^1.4.0",
    "babel-polyfill": "^6.20.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.20.0",
    "babelify": "^7.3.0",
    "bluebird": "^3.4.6",
    "boom": "^4.2.0",
    "browserify": "^13.1.1",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "cross-spawn": "^5.0.1",
    "find-up": "^2.1.0",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.1",
    "gray-matter": "^2.1.0",
    "hapi": "^16.0.1",
    "highlight.js": "^9.9.0",
    "home-or-tmp": "^2.0.0",
    "inert": "^4.0.3",
    "inquirer": "^2.0.0",
    "joi": "^10.0.6",
    "js-yaml": "^3.7.0",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-npm-import": "reptar/less-plugin-npm-import#basedir",
    "lodash": "^4.17.2",
    "markdown-it": "^8.2.2",
    "markdown-it-prism": "^1.0.1",
    "moment": "^2.17.1",
    "node-sass": "^4.0.0",
    "nunjucks": "^3.0.0",
    "ora": "^0.3.0",
    "reptar-excerpt": "0.8.0",
    "reptar-html-minifier": "^0.7.0",
    "resolve": "^1.2.0",
    "rimraf": "^2.5.4",
    "slug": "^0.9.1",
    "uglifyify": "^3.0.4",
    "yargs": "^6.5.0"
  },
  "devDependencies": {
    "@hswolff/git-directory-deploy": "^0.6.1",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-espower": "^2.3.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-lodash": "^3.2.10",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-es2015-parameters": "^6.18.0",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-regenerator": "^6.20.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "ghooks": "^1.3.2",
    "mocha": "^3.2.0",
    "mock-fs": "^4.0.0-beta.1",
    "nyc": "^10.0.0",
    "power-assert": "^1.4.2",
    "rewire": "^2.5.2",
    "shx": "^0.2.1",
    "sinon": "^2.0.0-pre.3",
    "standard-version": "^4.0.0",
    "validate-commit-msg": "^2.8.2"
  }
}
